{
    "manifest_version": 3,
    "name": "Chrome Copilot",
    "description": "Chrome Copilot is a browser extension that helps you to navigate the web.",
    "version": "0.0.1",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page": "options.html",
    "host_permissions": [
        "https://plugfox.dev/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Chrome Copilot",
        "default_icon": {
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "64": "icons/icon64.png",
            "96": "icons/icon96.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.dart.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://plugfox.com/*"
            ],
            "js": [
                "content_script.dart.js"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}